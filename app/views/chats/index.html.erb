<style>
    .btn-success{
        background-color: #db8b9c !important;
        border-color: #db8b9c !important;
    }

    .btn a{
        color: #ffffff !important;
    }
</style>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2> Chats </h2>
        <hr>
        <% @chats.each do |chat| %>
            <tr>
                <% if chat.sender_id == current_user.id or chat.recipient_id == current_user.id%>
                    <p>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <td><strong>
                                <% if chat.sender_id == current_user.id%>
                                <%= User.find(chat.recipient_id).name%>
                                <%end%>
                                <% if chat.recipient_id == current_user.id%>
                                        <%= User.find(chat.sender_id).name%>
                                <%end%>
                                </strong></td>
                                <button type="button" class="btn btn-success btn-sm"><%= link_to 'Show', chat_path(chat) %></button>
                                <button type="button" class="btn btn-success btn-sm"><%= link_to 'Delete', chat_path(chat),
                                        method: :delete, data: { confirm: 'Are you sure you want to delete this chat?' } %></button>
                            </div>
                        </div>
                    </p>
                <%end%>
            </tr>
        <% end %>

    </div>
</div>